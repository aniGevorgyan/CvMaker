<% layout('layout/page') %>
<style>
    .div div div:first-child p{
        color:#02547A;
    }
</style>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 content_login">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 login_form">
        <h1><span class="fa fa-info"></span> <%= global.lang.personalInfo %> </h1>
        <form name="myForm" novalidate>
            <div class="col-lg-5 col-lg-offset-1 free_page">
                <label style="padding: 15px 0;" id="gender"><input type="radio" name="gender" ng-model="site" value="<%= global.lang.male %>" /><i></i> <%= global.lang.male %> </label>
                <label id="gender"> <input type="radio" name="gender" value="<%= global.lang.female %>" ng-model="ttt" /><i></i> <%= global.lang.female %></label>
                <input type="text" class="form-control" name="firstName" ng-model="firstName" ng-pattern="/[a-zա-ֆа-я ,.'-]{3,20}/i" ng-maxlength="20"  placeholder="<%= global.lang.name %>" required>
                <input type="text" class="form-control" name="lastName" ng-minlength="3" ng-maxlength="20" ng-pattern="/[a-zա-ֆа-я ,.'-]{3,20}/i" ng-model="lastName" required placeholder="<%= global.lang.lastName %>">
                <input type="date" class="form-control" name="dob" ng-minlength="3" ng-maxlength="20" ng-pattern="/^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])$/" ng-model="dob" required placeholder="<%= global.lang.date %> (YYYY-MM-DD)">
            </div>
            <div class="col-lg-5 free_page">
                <input type="text" class="form-control" name="nationality" ng-minlength="3" ng-maxlength="20" ng-pattern="/[a-zա-ֆа-я]{3,20}/i" ng-model="nationality" required placeholder="<%= global.lang.nationality %>">
                <input type="email" class="form-control" name="email" ng-minlength="8" ng-maxlength="30"
                       ng-pattern="/^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i"
                       ng-model="email" required placeholder="<%= global.lang.email %>">
                <input type="text" class="form-control" name="phone" ng-minlength="8" ng-maxlength="30" ng-pattern="/\(?([0-9]{3})\)?([ .-]?)([0-9]{3})\2([0-9]{3})/" ng-model="phone" required  placeholder="<%= global.lang.phoneNumber %>">
                <input type="text" class="form-control" name="address" ng-minlength="3" ng-maxlength="30" ng-pattern="/[A-Za-zա-ֆа-я0-9'\.\-\s\,]/i" ng-model="address" required  placeholder="<%= global.lang.address %>">
            </div>
            <button type="button" ng-disabled= "myForm.$invalid" class="btn btn-info btn-lg preview"><%= global.lang.preview %></button>
        </form>
        <!--<button onclick="javascript:demoFromHTML()">PDF</button>-->
        <!--<div id="editor"></div>-->
        <!--<button id="cmd">generate PDF</button>-->
        <p><%= global.lang.please %> <a
                    href="/<%= language %>/login"><%= global.lang.login %></a> <%= global.lang.photo %></p>
        <p><a href="/<%= language %>"><%= global.lang.home %></a></p>
    </div>
    <div class="main_div">
        <div id="pdf2htmldiv"
             class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 div bounceInLeft animated">
            <div class="div" id="basic-table" style="width: 100%;background: white">
                <div class="">
                    <div class="col-xs-10">
                        <h2 style="color:#02547A; margin-left: 90px;margin-top:30px"><%= global.lang.resume %> <span style="font-size: 35px;color:#02547A;" class="firstName"> </span> <span style="font-size: 35px;color:#02547A;"
                                    class="lastName"> </span></h2>
                    </div>
                    <div class="col-xs-2"><i class="fa fa-times fa-3x close_button pull-right" aria-hidden="true"></i>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12" colspan="2">
                        <h3><%= global.lang.personalInfo %></h3>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12">
                        <p style="color:#02547A;margin-left: 90px;"><%= global.lang.gender %>: <span class="gender"></span></p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12">
                        <p style="color:#02547A; margin-left: 90px;"><%= global.lang.name %>: <span class="firstName"></span></p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12">
                        <p style="color:#02547A; margin-left: 90px;"><%= global.lang.lastName %>: <span class="lastName"></span></p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12">
                        <p style="color:#02547A;margin-left: 90px;"><%= global.lang.date %>: <span class="dob"></span></p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12">
                        <p style="color:#02547A;margin-left: 90px;"><%= global.lang.nationality %>: <span class="nationality"></span></p>
                    </div>
                </div>
                <div class="">
                    <div class="col-xs-12">
                        <p style="color:#02547A; margin-left: 90px;"><%= global.lang.email %>: <span class="email"></span></p>
                    </div>
                </div>
                <div class="oneTr">
                    <div class="col-xs-12">
                        <p style="color:#02547A; margin-left: 90px;"><%= global.lang.phoneNumber %>: <span class="phone"></span></p>
                    </div>
                </div>
                <div class="oneTr">
                    <div class="col-xs-12">
                        <p style="color:#02547A; margin-left: 90px;"><%= global.lang.address %>: <span class="address"></span></p>
                    </div>
                </div>
            </div>
        </div>
        <form method="post" action="/pdfGenrator" style="color:black">
            <input type="hidden" name="content" id="allInfo"/>
            <input type="hidden" name="cv_name" id="nameInfo"/>
            <input type="hidden" name="cv_lastname" id="lastnameInfo"/>
            <button type="submit"
                    class="btn btn-info btn-lg"><%= global.lang.download %></button>
        </form>
        <!--<button type="button" onclick="javascript:pdfToHTML()" class="btn btn-info btn-lg"><%= global.lang.download %></button><br/>-->
        <button type="button"  class="btn btn-info btn-lg" id="edit"><%= global.lang.edit %></button>
    </div>
</div>