<% layout('layout/page') %>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 content_1">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12" id="main_content">
        <h3 class="bounceInLeft animated"><%= global.lang.head %></h3>

        <h3 class="bounceInRight animated"><%= global.lang.head1 %></h3>
        <input id="round" type="submit" value="<%= global.lang.tryFree %>"
               onclick="location.href='/<%= language %>/free'"/><br/>
        <a href="/<%= language %>/login"><p class="zoomInUp animated"><%= global.lang.login %></p></a>
        <a href="/<%= language %>/signup"><p class="zoomInUp animated"> <%= global.lang.signUp %></p></a>
        <a href="/auth/facebook" class="btn btn-primary"><span style="margin-top: -10px" class="fa fa-facebook"></span></a>
    </div>
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 content_2">
        <h2><%= global.lang.selection%></h2>
        <!--<img src="/images/cv-template-avant.png" alt="img_1"/>-->
        <!--<img src="/images/cv-template-brooklyn.png" alt="img_2"/>-->
        <!--<img src="/images/cv-template-online-resume-verge.png" alt="img_3"/>-->
        <div class="flipbook-viewport">
            <div class="container">
                <div class="flipbook">
                    <div style="background-image:url(/images/3.png)"></div>
                    <div style="background-image:url(/images/1.png)"></div>
                    <div style="background-image:url(/images/4.png)"></div>
                    <div style="background-image:url(/images/5.png)"></div>
                    <div style="background-image:url(/images/1.png)"></div>
                    <div style="background-image:url(/images/6.png)"></div>
                    <div style="background-image:url(/images/7.png)"></div>
                    <div style="background-image:url(/images/10.png)"></div>
                    <div style="background-image:url(/images/8.png)"></div>
                    <div style="background-image:url(/images/9.png)"></div>
                    <div style="background-image:url(/images/12.png)"></div>
                </div>
            </div>
        </div>
        <div class="brands"></div>
        <script type="text/javascript">

            function loadApp() {

                // Create the flipbook

                $('.flipbook').turn({
                    // Width

                    width:1000,

                    // Height

                    height:707,

                    // Elevation

                    elevation: 50,

                    // Enable gradients

                    gradients: true,

                    // Auto center this flipbook

                    autoCenter: true

                });
            }

            // Load the HTML4 version if there's not CSS transform

            yepnope({
                test : Modernizr.csstransforms,
                yep: ['/js/lib/turn.js'],
                complete: loadApp
            });

        </script>
    </div>
</div>