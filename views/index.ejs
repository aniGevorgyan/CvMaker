<% layout('layout/page') %>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 content_1">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
        <h3 class="bounceInLeft animated"><%= global.lang.head %></h3>

        <h3 class="bounceInRight animated"><%= global.lang.head1 %></h3>
        <input id="round" type="submit" value="<%= global.lang.tryFree %>"
               onclick="location.href='/<%= language %>/free'"/><br/>
        <a href="/<%= language %>/login"><p class="bounceInDown animated"><%= global.lang.login %></p></a>
        <a href="/<%= language %>/signup"><p class="bounceInUp animated"> <%= global.lang.signUp %></p></a>
        <a href="/auth/facebook" class="btn btn-primary"><span style="margin-top: -10px" class="fa fa-facebook"></span></a>
    </div>
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 content_2">
        <h2><%= global.lang.selection%></h2>
        <img src="/images/cv-template-avant.png" alt="img_1"/>
        <img src="/images/cv-template-brooklyn.png" alt="img_2"/>
        <img src="/images/cv-template-online-resume-verge.png" alt="img_3"/>
        <div class="brands"></div>
    </div>
</div>