<% layout('layout/page') %>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 content_login">
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 login_form">
        <div class="col-sm-4 col-sm-offset-4">
            <h1><span class="fa fa-sign-in"></span> <%= global.lang.login %></h1>

            <!-- show any messages that come back with authentication -->

            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label></label>
                    <input type="text" class="form-control" name="email" placeholder="<%= global.lang.email %>">
                </div>
                <div class="form-group">
                    <label></label>
                    <input type="password" class="form-control" name="password"
                           placeholder="<%= global.lang.password %>">
                </div>

                <button type="submit" class="btn btn-info btn-lg"><%= global.lang.login %></button>
            </form>
            <p> <%= global.lang.logAccount%> <a href="/<%= language %>/signup"><%= global.lang.signUp %></a></p>
            <p><a href="/<%= language %>"><%= global.lang.home %></a></p>
        </div>
    </div>
</div>
